{
  "openapi": "3.0.1",
  "info": {
    "title": "UserService",
    "version": "1.0"
  },
  "paths": {
    "/user/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Creates a new user.",
        "requestBody": {
          "description": "User registration data (username and password).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUser"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUser"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User Created."
          },
          "400": {
            "description": "Username already exists."
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Authenticates a user and returns a JWT token.",
        "requestBody": {
          "description": "Login data (username and password).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User loged in."
          },
          "400": {
            "description": "Missing username or password."
          },
          "401": {
            "description": "Invalid username or password."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}